<h1>Informar Pagamento</h1>

<p><strong>Número de Registro:</strong> <%= @assinatura.numero_registro %></p>
<p><strong>Nome do Cliente:</strong> <%= @assinatura.cliente.nome %></p>
<p><strong>Data de Vencimento Atual:</strong> <%= @assinatura.data_vencimento %></p>

<%= form_with(model: @assinatura, url: confirmar_pagamento_assinatura_path(@assinatura), method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :data_inicio, "Informe a nova data de início do pagamento:" %>
    <%= form.date_field :data_inicio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Confirmar Pagamento", class: "btn btn-primary" %>
  </div>
<% end %>
